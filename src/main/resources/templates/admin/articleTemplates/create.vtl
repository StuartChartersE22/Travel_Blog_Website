<h3 class="page-\header">Create a New Article:</h3>

<form action="/admin/article/save" method="post">

    <div class="form-wrap">

    <div class="form">
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" placeholder="Title needed" required>
    </div>

    <div class="form">
    <label for="author">Author: </label>
    <select name="authorId" id="author" required>
        <option selected hidden>Select author</option>
        #foreach($author in $writers)
            <option value="$author.getId()">$author.getName()</option>
        #end
    </select>
    </div>

    <div class="form">
    <label for="content">Article's content: </label>
    <input type="text" name="content" id="content" placeholder="Insert text here" required>
    </div>

    <div class="form">
    <label for="summary">Article's summary: </label>
    <input type="text" name="summary" id="summary" placeholder="Insert text here" required>
    </div>

    <div class="form">
    <label for="category_list">Categories</label>
    <ul id="category_list">
        #foreach($category in $categories)
            <li>
                <label for="categoryId_$category.getId()">$category.getName()</label>
                <input type="checkbox" id="categoryId_$category.getId()" name="categoryIds" value="$category.getId()">
            </li>
        #end
    </ul>
    </div>

    <div class="form">
    <label for="tag_list">Tags: </label>
    <ul id="tag_list">
        #foreach($tag in $tags)
            <li>
                <label for="tag_$tag.getId()">$tag.getName()</label>
                <input type="checkbox" id="tag_$tag.getId()" name="tagIds" value="$tag.getId()">
            </li>
        #end
    </ul>
    </div>

        <div class="form">
    <label for="image_list">Images: </label>
    <ul id="image_list">
        #foreach($image in $images)
        <li>
            <input type="radio" id="image_$image.getId()" name="imageId" value="$image.getId()" required>
            <label for="image_$image.getId()"><img src="$image.getRoute()" alt="$image.getAltText()" class="article-select-image"></label>
        </li>
        #end
    </ul>
        </div>

        <div class="form">
            <input class="btn" type="submit" value="Save">
        </div>
    </div>
</form>

