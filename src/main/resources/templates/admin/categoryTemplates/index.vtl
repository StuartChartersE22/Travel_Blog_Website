<p class="pageHeader">All Categories</p>

<ul>
    #foreach($category in $categories)
    <li>
        <h2>$category.getName()</h2>
        <ul>
        #foreach($article in $categoryArticles.get($category.getId()))
            <li>
                <h3>$article.getTitle()</h3>
                <p>$article.getSummary()</p>
            </li>
        #end
        </ul>
    </li>
    #end
</ul>